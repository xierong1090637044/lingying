.alllist
{
  display: flex;
  justify-content:space-between;
  background: #fff;
  padding: 5px 8px;
}
.image
{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.contentview
{
  width: calc(100% - 70px);
  text-align:left;
  
}
.onefloor
{
  font-size: 16px;
  color: #000;
  padding: 3px 0;
}
.secondfloor
{
  font-size: 13px;
  color: #999;
  padding: 3px 0;
}
.icontext
{
  width: 18px;
  height: 18px;
  text-align: center;
  display: inline-block;
  background: #e9aa14;
  color: #fff;
  margin-right: 5px;
}

.icontext1
{
  width: 18px;
  height: 18px;
  text-align: center;
  display: inline-block;
  background: #e914c8;
  color: #fff;
  margin-right: 5px;
  margin-left: 10%;
}
.allcontent
{
  margin-bottom: 10px;
}
.introduce
{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  border-top: 1px solid#999;
  padding: 5px 0 0 0;
}
.icon-none
{
  font-size: 40px;
  color: #e9aa14;
}

.bottomitem
{
  display: flex;
  flex-direction:row-reverse;
  padding: 10px 10px 10px 0;
}
.giveout
{
  margin:1%;
  background: #ec1515;
  color: #fff;
  font-size: 16px;
  padding: 4px 8px;
  border-radius: 4px
}
.call
{
  margin:1%;
  background: #2ca879;
  color: #fff;
  font-size: 16px;
  padding: 4px 8px;
  border-radius: 4px
}
.icon-none
{
  font-size: 40px;
  color: #e9aa14;
}
.notice
{
  font-size: 12px;
  position: fixed;
  bottom: 15%;
  left: 0;
  width: 100%;
  color: #999;
  text-align: center;
  line-height: 25px;
}

.listitem
{
  display: flex;
  align-items: center;
  background-color: #fff;
  justify-content:space-between;
  color: #000;
  line-height: 30px;
  font-size: 16px;
  padding:10px;
  margin-bottom: 10px;
}
.leftitem
{
  text-align: left;
  color: #424242;
  max-width: 50%;
}
.city
{
  color: #ffcc00;
  font-weight: bold;
  font-size: 18px;
  margin-right: 5px;
}
.subject
{
  color: #000;
  font-weight: bold;
  font-size: 18px;
}
.rightitem
{
  text-align: right;
  color: #424242;
}
.introduce1
{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}