.headertext {
  color: #000;
  margin-bottom: 10px;
  font-size: 16px;
  padding-left: 5px;
  border-left: 3px solid #50d8c0;
  margin-left: 20px;
  /* border-bottom:1px solid #eee;  */
}

.gender {
  font-size: 12px;
}

.publish1 {
  background-color: #fff;
}

page {
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.headerimg {
  width: 100%;
}

.select {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000;
  line-height: 35px;
  font-size: 16px;
}

.section {
  width: 50%;
  text-align: center;
  font-size: 14px;
  background-color: #f6f6f6;
}

.scrollview {
  margin-top: 10px;
}

.alllist {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  margin: 10px 15px;
}

.image {
  width:15vw;
  height:15vw;
  border-radius:50%;
  margin:4vw;
}

.gender {
  margin-left: 40px;
  margin-right: 10px;
}

.contentview {
  width: calc(100% - 70px);
  text-align: left;
}

.onefloor {
  font-size: 16px;
  color: #000;
  padding: 3px 0;
}

.secondfloor {
  font-size: 12px;
  color: #999;
  padding: 3px 0;
}

.icontext {
  width: 18px;
  height: 18px;
  text-align: center;
  display: inline-block;
  background: #e9aa14;
  color: #fff;
  margin-right: 5px;
}

.icontext1 {
  width: 18px;
  height: 18px;
  text-align: center;
  display: inline-block;
  background: #e914c8;
  color: #fff;
  margin-right: 5px;
  margin-left: 10%;
}

.allcontent {
  margin-bottom: 10px;
}

.introduce {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  border-top: 1px solid#999;
  padding: 5px 0 0 0;
}

.icon-none {
  font-size: 40px;
  color: #e9aa14;
}
