::-webkit-scrollbar
{
width: 0;
height: 0;
color: transparent;
}
.fristcontent
{
  padding: 10px;
  background: #50d8c0;
  color: #fff;
  font-size: 16px;
}
.list
{
  display: flex;
  align-items: center;
  justify-content:space-between;
  color: #000;
  line-height: 30px;
  font-size: 16px;
  padding:5px 0px;
  border-bottom: 1px solid#ddd;
}
.left
{
  color: #666
}
.border
{
  border-bottom: 1px solid#ddd;
}

.title
{
  color: #50d8c0;
  font-weight: bold;
  line-height: 40px;
  font-size: 18px;
  text-align: center;
}
.notice
{
  color: #999;
  font-size: 14px;
  text-align: left;
  padding: 10px 10px;
}

.bottom
{
  position: fixed;
  bottom: 0%;
  left: 0;
  width: 100%;
  background: #fafafa;
  z-index: 100;
}
.bottomitem
{
  float: left;
  width: calc(25% - 20px);
  text-align: center;
  padding: 8px 10px 12px;
  height: 35px;
}
.bottomitem1
{
  float: left;
  width: calc(25% - 20px);
  text-align: center;
  padding: 8px 10px 12px;
  background: #50d8c0;
  color: #fff;
  font-weight: bold;
  line-height: 35px;
  height: 35px;
  font-size: 16px;
}
.icon3{
  color:#000;
  font-size:25px;
}
.detail
{
  max-width: 70%;
  line-height:20px;
}
.scrollview
{
  max-height: calc(100vh - 60px);
  margin: 0 10px;
  width: calc(100% - 20px);
}
.detailoverflow
{
  max-width: 70%;
  white-space: nowrap;
  overflow: scroll;
}

.mask
{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
  z-index: 100;
  top:0;
  left: 0
}

.content
{
  position: fixed;
  top:15%;
  width: calc(80% - 40px);
  left: 10%;
  z-index: 101;
  background: #fafafa;
  border-radius: 4px;
  padding: 20px;
}
.textareastyle
{
  border:1px solid#999;
  border-radius: 4px;
  margin: 0 0 10px 0;
}
.textarea
{
  padding: 5px;
  font-size: 16px;
}
.picker
{
  font-size: 16px;
  padding: 5px;
}
.submit
{
  background: #50d8c0;
  font-size: 16px;
  margin-top: 10px;
  margin-bottom: 10px;
  width:40%;
  line-height:35px;
  color: #fff;
  border-radius: 4px;
  text-align: center;
  margin: 0 auto
}
